<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    >
    <LinearLayout
        android:background="#f5f5f5"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/customer_name"
                android:text="Customer Name"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/jobtile"
                android:text="JobTile"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:id="@+id/usd"
                android:text="USD 435"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/comment"
            android:text="Comments"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/darkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/rejecteddatetv"
                android:text="Reject on "
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rejecteddatetv"
                android:textSize="@dimen/_9sdp"
                android:id="@+id/rejecteddate"
                android:text="3rd september,2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/placeddatetv"
                android:text="placed on "
                android:layout_toStartOf="@+id/placeddate"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/_9sdp"
                android:id="@+id/placeddate"
                android:text="3rd september,2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>