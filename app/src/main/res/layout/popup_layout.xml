<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingTop="@dimen/_7sdp"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/_1sdp"
            android:id="@+id/popup_msg"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="@dimen/_7sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:text="@string/message_is_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/popup_msg"
            android:layout_toStartOf="@+id/popu_ok_tv"
            android:id="@+id/popup_cancel_tv"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#26007e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <TextView
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/primary_circle_background"
            android:layout_below="@+id/popup_msg"
            android:layout_alignParentEnd="true"
            android:id="@+id/popu_ok_tv"
            android:text="@string/ok"
            android:textStyle="bold"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>