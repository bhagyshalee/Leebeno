        android:layout_gravity="center"/>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/crossImg"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/cross_black" />
</LinearLayout>